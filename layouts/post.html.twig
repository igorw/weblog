{% extends "base.html.twig" %}

{% block title %}{{ post.title }}{% endblock %}

{% block body %}
    <nav>
        <i class="icon-home"></i> <a href="{{ relativeRoot }}">home</a>
    </nav>

    <article>
        <div class="date pull-right">
            {{ post.date|date('M dS, Y') }}
        </div>

        <div class="body">
            {{ post.body|raw }}
        </div>
    </article>
{% endblock %}
